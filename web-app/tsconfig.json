{
  "extends": "@snowpack/app-scripts-lit-element/tsconfig.base.json",
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["web_modules/.types/*"]
    }
  },
  "include": [ "src" ],
  "exclude": ["node_modules/"]
}
